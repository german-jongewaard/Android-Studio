<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--  Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemaAsteroides" parent="android:style/Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Estilo para el Texto - TextoAsteroides. -->
    <style name="TextoAsteroides" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">20dip</item>
    </style>

    <!-- Estilo para los Botones - TextoAsteroides.Botones -->
    <style name="TextoAsteroides.Botones" >
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dip</item>
    </style>

    <!-- Estilo para los Botones de la Tableta- TextoAsteroides.Botones -->
    <style name="TextoAsteroides.Botones.Tableta" >
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">30dip</item>
    </style>



</resources>
